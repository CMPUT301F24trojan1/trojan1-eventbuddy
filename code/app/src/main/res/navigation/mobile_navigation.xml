<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/emptyEventsFragment">

    <fragment
        android:id="@+id/emptyEventsFragment"
        android:name="com.example.trojanplanner.events.EmptyEventsFragment"
        android:label="Empty Events"
        tools:layout="@layout/fragment_empty_myevents">
        <action
            android:id="@+id/action_emptyEventsFragment_to_facilityRegistrationFragment"
            app:destination="@id/facilityRegistrationFragment"/>
    </fragment>

    <fragment
        android:id="@+id/facilityRegistrationFragment"
        android:name="com.example.trojanplanner.events.facility.Facilityregistrationfragment"
        android:label="Facility Registration"
        tools:layout="@layout/fragment_facility_registration" />

    <fragment
        android:id="@+id/organizerRegistrationFragment"
        android:name="com.example.trojanplanner.events.organizer.OrganizerRegistrationFragment"
        android:label="Organizer Registration"
        tools:layout="@layout/fragment_organizer_options" />

    <fragment
        android:id="@+id/eventsFragment"
        android:name="com.example.trojanplanner.events.EventsFragment"
        android:label="@string/title_events"
        tools:layout="@layout/fragment_events_list" />

    <fragment
        android:id="@+id/eventDetailsFragment"
        android:name="com.example.trojanplanner.events.EventDetailsFragment"
        android:label="Event Details"
        tools:layout="@layout/fragment_event_details" />

    <activity
        android:id="@+id/qrActivity"
        android:name="com.example.trojanplanner.view.QRActivity"
        android:label="@string/title_qr"
        tools:layout="@layout/activity_qr" />

    <activity
        android:id="@+id/profileActivity"
        android:name="com.example.trojanplanner.view.ProfileActivity"
        android:label="@string/title_profile"
        tools:layout="@layout/activity_profile" />
</navigation>