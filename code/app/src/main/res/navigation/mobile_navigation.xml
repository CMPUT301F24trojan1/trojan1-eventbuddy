<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/emptyEventsFragment">

    <fragment
        android:id="@+id/emptyEventsFragment"
        android:name="com.example.trojanplanner.events.EmptyEventsFragment"
        android:label="Empty Events"
        tools:layout="@layout/fragment_empty_myevents">
        <action
            android:id="@+id/action_emptyEventsFragment_to_organizerRegistrationFragment"
            app:destination="@id/organizerRegistrationFragment" />
        <action
            android:id="@+id/action_emptyEventsFragment_to_createEventFragment"
            app:destination="@id/createEventFragment" /> <!-- New action to navigate to CreateEventFragment -->
    </fragment>

    <fragment
        android:id="@+id/createEventFragment"
        android:name="com.example.trojanplanner.view.CreateEventFragment"
        android:label="Create Event"
        tools:layout="@layout/fragment_create_events" /> <!-- Layout for the new fragment -->

    <fragment
        android:id="@+id/organizerRegistrationFragment"
        android:name="com.example.trojanplanner.events.organizer.OrganizerRegistrationFragment"
        android:label="Organizer Registration"
        tools:layout="@layout/fragment_organizer_registration" />

    <fragment
        android:id="@+id/eventsFragment"
        android:name="com.example.trojanplanner.events.EventsFragment"
        android:label="@string/title_events"
        tools:layout="@layout/fragment_events_list" />

    <activity
        android:id="@+id/qrActivity"
        android:name="com.example.trojanplanner.view.QRActivity"
        android:label="@string/title_qr"
        tools:layout="@layout/activity_qr" />

    <activity
        android:id="@+id/profileActivity"
        android:name="com.example.trojanplanner.view.ProfileActivity"
        android:label="@string/title_profile"
        tools:layout="@layout/activity_profile" />
</navigation>
