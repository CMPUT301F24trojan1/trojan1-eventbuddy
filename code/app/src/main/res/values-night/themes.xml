<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme -->
    <style name="Theme.TrojanPlanner" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="colorPrimary">@color/red_dark</item>
        <item name="colorPrimaryVariant">@color/red_primary</item>
        <item name="colorOnPrimary">@color/light_brown</item>

        <!-- Secondary brand color - Night mode -->
        <item name="colorSecondary">@color/light_red_variant</item>
        <item name="colorSecondaryVariant">@color/light_red</item>
        <item name="colorOnSecondary">@color/light_brown</item>

        <!-- Background and surface colors - Night mode -->
        <item name="colorSurface">@color/dark_surface</item>
        <item name="colorOnBackground">@color/light_red</item>
        <item name="colorOnSurface">@color/light_red</item>

        <!-- Status bar color -->
        <item name="android:statusBarColor">@color/statusBarColor</item>
        <item name="android:windowLightStatusBar">true</item>
    </style>
</resources>
